<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mediaSourceText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:paddingBottom="3dip"
        android:paddingTop="2dip"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/mediaContentText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:paddingBottom="3dip"
        android:paddingTop="2dip"
        android:layout_below="@+id/mediaSourceText"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="normal"
        android:maxLines="2"/>

    <TextView
        android:id="@+id/interactionsText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:paddingBottom="3dip"
        android:paddingTop="2dip"
        android:layout_below="@+id/mediaContentText"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/sentimentText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:paddingBottom="3dip"
        android:paddingTop="2dip"
        android:layout_below="@+id/interactionsText"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/userOrNetworkText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:paddingTop="2dip"
        android:paddingBottom="3dip"
        android:layout_below="@+id/sentimentText"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:paddingBottom="3dip"
        android:paddingTop="2dip"
        android:layout_below="@+id/userOrNetworkText"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/urlText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:paddingTop="2dip"
        android:paddingBottom="3dip"
        android:layout_below="@+id/dateText"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="normal" />
</RelativeLayout>