<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/stockSymbolText"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_toStartOf="@+id/addStockButton"
        android:layout_toLeftOf="@+id/addStockButton"
        android:fontFamily="sans-serif"
        android:paddingTop="2dip"
        android:paddingBottom="3dip"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/stockNameText"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stockSymbolText"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_toStartOf="@+id/addStockButton"
        android:layout_toLeftOf="@+id/addStockButton"
        android:fontFamily="sans-serif"
        android:maxLines="2"
        android:paddingTop="2dip"
        android:paddingBottom="3dip"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="normal" />

    <ImageButton
        android:id="@+id/addStockButton"
        android:layout_width="43dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="#FFFFFF"
        app:srcCompat="@android:drawable/ic_input_add" />

</RelativeLayout>